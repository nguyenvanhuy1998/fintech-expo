{
    "expo": {
        "name": "FintechExpo",
        "slug": "FintechExpo",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "myapp",
        "userInterfaceStyle": "automatic",
        "splash": {
            "image": "./assets/images/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.gemini.fintech"
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "package": "com.gemini.fintech"
        },
        "web": {
            "bundler": "metro",
            "output": "server",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            [
                "expo-router",
                {
                    "origin": "https://galaxies.dev"
                }
            ],
            [
                "expo-local-authentication",
                {
                    "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID."
                }
            ],
            [
                "expo-image-picker",
                {
                    "photosPermission": "The app accesses your photos to let you share them with your friends."
                }
            ],
            [
                "expo-dynamic-app-icon",
                {
                    "default": {
                        "image": "./assets/images/icon.png", // icon path
                        "prerendered": true // for ios UIPrerenderedIcon option
                    },
                    "dark": {
                        "image": "./assets/images/icon-dark.png", // icon path
                        "prerendered": true // for ios UIPrerenderedIcon option
                    },
                    "vivid": {
                        "image": "./assets/images/icon-vivid.png", // icon path
                        "prerendered": true // for ios UIPrerenderedIcon option
                    }
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}
